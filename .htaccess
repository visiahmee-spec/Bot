# ================================================
# AHMED Bot - Apache Configuration
# ================================================

# تفعيل محرك إعادة الكتابة
RewriteEngine On

# منع عرض قائمة المجلدات
Options -Indexes

# حماية الملفات الحساسة
<FilesMatch "\.(txt|log|sql|json|md)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# السماح بالوصول لملف البوت فقط
<Files "bot.php">
    Order Allow,Deny
    Allow from all
</Files>

# حماية ملفات التكوين
<Files "config.json">
    Order Allow,Deny
    Deny from all
</Files>

<Files "database.sql">
    Order Allow,Deny
    Deny from all
</Files>

# منع الوصول لمجلد temp
<Directory "temp">
    Order Allow,Deny
    Deny from all
</Directory>

# إعدادات PHP
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# ضغط المحتوى
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/json
</IfModule>

# Cache Control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# حماية من الهجمات
<IfModule mod_rewrite.c>
    # منع SQL Injection
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule ^(.*)$ - [F,L]
    
    # منع File Injection
    RewriteCond %{REQUEST_URI} !^/bot\.php$
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=http:// [OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=(\.\.//?)+ [OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=/([a-z0-9_.]//?)+ [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# رؤوس الأمان
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# تعيين المنطقة الزمنية
<IfModule mod_php7.c>
    php_value date.timezone "Asia/Baghdad"
</IfModule>

# صفحات الخطأ المخصصة
ErrorDocument 403 /error.html
ErrorDocument 404 /error.html
ErrorDocument 500 /error.html

# إعادة توجيه HTTPS (اختياري)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# منع الروبوتات الضارة
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^.*(bot|spider|crawl|scraper).* [NC]
    RewriteCond %{HTTP_USER_AGENT} !^.*(googlebot|bingbot|yahoo|duckduckbot).* [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>